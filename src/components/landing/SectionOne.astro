---
import DocumentScan from "./graphics/DocumentScan.jsx";
import ComplianceCalendar from "./graphics/ComplianceCalendar.jsx";
import Insights from "./graphics/Insights.jsx";
import Hub from "./graphics/Hub.jsx";
import InvestmentQAChat from "./graphics/InvestmentQAChat.jsx";
---

<section id="features">
  <div class="mx-auto w-full items-center py-24 scroll-mt-12">
    <div class="mx-auto">
      <div>
        <p
          class="text-4xl font-medium md:text-5xl font-display text-balanced text-zinc-800"
        >
          Centralized, intelligent investment management
        </p><p
          class="mt-4 text-lg text-na mx-auto tracking-tight text-stone-500"
        >
          Find peace in knowing your investments are organized, secure, and on
          track
        </p>
      </div>
    </div>
    <div>
      <div class="mx-auto pt-12">
        <h2 class="sr-only">Features.</h2><div>
          <div class="grid gap-6 grid-cols-1 lg:space-y-0 md:grid-cols-2">
            <div class="md:col-span-2">
              <DocumentScan client:load />
            </div>
            <InvestmentQAChat client:load />
            <Insights client:load />
            <ComplianceCalendar client:load />
            <Hub client:load />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
